<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div class="navbar-nav me-auto" id="loginForm" >
      <div class="form-group mb-2"></div>
        <% if (!username) { %>
        <form class="form-inline" method="POST" action="/login">
          <input class="form-control" type="text" name="username" placeholder="Username" style="width: 300px; margin-right:15px;">
          <button type="submit" class="btn btn-outline-dark">Login</button>
        </form>
        <% } else { %>
        <h5 class="" style="padding-left: 1em; padding-right: 1em; text-align:inline; margin: auto; padding: 10px;">Logged: <%= username %></h5>
        <form method="POST" action="/logout">
          <button type="submit" class="btn btn-outline-dark">Logout</button>
        </form>
        <% } %>
      </div>
    </div>
  </div>

  </nav>
</header>